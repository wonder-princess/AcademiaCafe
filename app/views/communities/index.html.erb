<% render 'communities/communities', communities: @communities %>

<p id="notice"><%= notice %></p>

<h1>Community</h1>

<table>
  <thead>
  <tr>
    <th>id</th>
    <th>title</th>
    <th>kind</th>
    <th>introduction</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @communities.each do |community| %>
    <tr>
      <td><%= community.id %></td>
      <td><%= community.title %></td>
      <td><%= community.kind %></td>
      <td><%= community.introduction %></td>
      <td><%= link_to 'Show', community %></td>
      <td><%= link_to 'Edit', edit_user_path(community) %></td>
      <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

